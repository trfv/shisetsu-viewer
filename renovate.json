{
   "extends": [
      "config:base"
   ],
   "timezone": "Asia/Tokyo",
   "schedule": [
      "every weekend"
   ],
   "labels": [
      "renovate"
   ],
   "baseBranches": [
      "develop"
   ],
   "patch": {
      "automerge": true
   },
   "minor": {
      "automerge": true
   },
   "separateMultipleMajor": true,
   "packageRules": [
      {
         "matchDepTypes": [
            "devDependencies"
         ],
         "groupName": "devDependencies",
         "automerge": true
      }
   ]
}
