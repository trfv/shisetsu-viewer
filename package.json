{
  "name": "shisetsu-viewer",
  "version": "1.0.0",
  "private": false,
  "description": "Shisetsu Viewer",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/trfv/shisetsu-viewer/"
  },
  "license": "MIT",
  "author": "trfv",
  "dependencies": {
    "@apollo/client": "3.7.0",
    "@auth0/auth0-spa-js": "1.22.5",
    "@emotion/react": "11.10.4",
    "@emotion/styled": "11.10.4",
    "@mui/icons-material": "5.10.9",
    "@mui/material": "5.10.9",
    "@mui/x-date-pickers": "5.0.4",
    "date-fns": "2.29.3",
    "graphql": "16.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.4.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.7",
    "@graphql-codegen/typescript": "2.7.4",
    "@graphql-codegen/typescript-operations": "2.5.4",
    "@graphql-codegen/typescript-react-apollo": "3.3.4",
    "@mdx-js/react": "2.1.5",
    "@storybook/addon-essentials": "6.5.12",
    "@storybook/api": "6.5.12",
    "@storybook/builder-vite": "0.2.4",
    "@storybook/react": "6.5.12",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@tsconfig/strictest": "1.0.2",
    "@types/node": "18.0.4",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/react-router-dom": "5.3.3",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "dotenv": "16.0.3",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.31.10",
    "happy-dom": "7.5.12",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.1.1",
    "react-test-renderer": "18.2.0",
    "rollup-plugin-visualizer": "5.8.2",
    "storycap": "3.1.9",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "vitest": "0.24.3",
    "web-vitals": "3.0.3"
  },
  "scripts": {
    "generate": "graphql-codegen --require dotenv/config --config ./src/api/config.yml",
    "start": "vite --port 3000",
    "build": "tsc && vite build",
    "build:analyze": "vite build  --mode analyze",
    "serve": "vite preview --port 3000",
    "format:fix": "prettier --ignore-path .prettierignore --write",
    "lint:fix": "eslint --ignore-path .eslintignore --fix",
    "format:all": "npm run format:fix \"./src/**/*.ts*\"",
    "lint:all": "npm run lint:fix \"./src/**/*.ts*\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "storycap": "storycap http://127.0.0.1:8080 --serverCmd \"npx http-server storybook-static -g -b\"",
    "test": "TZ=Asia/Tokyo vitest",
    "coverage": "TZ=Asia/Tokyo vitest run --coverage",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  }
}