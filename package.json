{
  "name": "shisetsu-viewer",
  "version": "1.0.0",
  "private": false,
  "description": "Shisetsu Viewer",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/trfv/shisetsu-viewer/"
  },
  "license": "MIT",
  "author": "trfv",
  "dependencies": {
    "@apollo/client": "3.4.11",
    "@auth0/auth0-spa-js": "1.18.0",
    "@emotion/react": "11.4.1",
    "@emotion/styled": "11.3.0",
    "@mui/icons-material": "5.0.0",
    "@mui/lab": "5.0.0-alpha.47",
    "@mui/material": "5.0.0",
    "date-fns": "2.24.0",
    "graphql": "15.5.3",
    "markdown-to-jsx": "7.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router": "5.2.1",
    "react-router-dom": "5.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-operations": "2.1.4",
    "@graphql-codegen/typescript-react-apollo": "3.1.4",
    "@storybook/addon-actions": "6.3.8",
    "@storybook/addon-essentials": "6.3.8",
    "@storybook/addon-links": "6.3.8",
    "@storybook/node-logger": "6.3.8",
    "@storybook/react": "6.3.8",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.0",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/node": "16.9.1",
    "@types/react": "17.0.21",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.1.9",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.25.2",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "prettier-plugin-organize-imports": "2.3.3",
    "reg-keygen-git-hash-plugin": "0.10.16",
    "reg-notify-github-plugin": "0.10.16",
    "reg-publish-s3-plugin": "0.10.16",
    "reg-suit": "0.10.16",
    "storybook-builder-vite": "0.0.12",
    "storycap": "3.1.0",
    "typescript": "4.4.3",
    "vite": "2.5.8",
    "web-vitals": "2.1.0"
  },
  "scripts": {
    "generate": "DOTENV_CONFIG_PATH=.env.local graphql-codegen -r dotenv/config --config ./src/api/config.yml",
    "start": "vite --port 3000",
    "build": "tsc && vite build",
    "serve": "vite preview --port 3000",
    "format:fix": "prettier --ignore-path .prettierignore --write",
    "lint:fix": "eslint --ignore-path .eslintignore --fix",
    "format:all": "npm run format:fix \"./src/**/*.ts*\"",
    "lint:all": "npm run lint:fix \"./src/**/*.ts*\"",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "storycap": "storycap http://127.0.0.1:8080 --serverCmd \"npx http-server storybook-static\"",
    "reg-suit": "reg-suit run",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  }
}
