{
  "name": "shisetsu-viewer",
  "version": "1.0.0",
  "private": false,
  "description": "Shisetsu Viewer",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/trfv/shisetsu-viewer/"
  },
  "license": "MIT",
  "author": "trfv",
  "dependencies": {
    "@apollo/client": "3.4.8",
    "@auth0/auth0-react": "1.6.0",
    "@emotion/react": "11.4.1",
    "@emotion/styled": "11.3.0",
    "@material-ui/core": "5.0.0-beta.4",
    "@material-ui/data-grid": "4.0.0-alpha.37",
    "@material-ui/icons": "4.11.2",
    "@material-ui/lab": "5.0.0-alpha.43",
    "@material-ui/styles": "5.0.0-beta.4",
    "date-fns": "2.23.0",
    "graphql": "15.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.1.1",
    "@graphql-codegen/typescript": "2.1.0",
    "@graphql-codegen/typescript-operations": "2.1.0",
    "@graphql-codegen/typescript-react-apollo": "3.1.0",
    "@storybook/addon-actions": "6.3.7",
    "@storybook/addon-essentials": "6.3.7",
    "@storybook/addon-links": "6.3.7",
    "@storybook/node-logger": "6.3.7",
    "@storybook/react": "6.3.7",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/node": "16.6.1",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.1.8",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "prettier-plugin-organize-imports": "2.3.3",
    "reg-keygen-git-hash-plugin": "0.10.16",
    "reg-notify-github-plugin": "0.10.16",
    "reg-publish-s3-plugin": "0.10.16",
    "reg-suit": "0.10.16",
    "storycap": "3.0.4",
    "typescript": "4.3.5",
    "vite": "2.5.0",
    "web-vitals": "2.1.0"
  },
  "scripts": {
    "generate": "DOTENV_CONFIG_PATH=.env.local graphql-codegen -r dotenv/config --config ./src/api/config.yml",
    "start": "vite --port 3000",
    "build": "tsc && vite build",
    "serve": "vite preview --port 3000",
    "format:fix": "prettier --ignore-path .prettierignore --write \"./src/**/*.ts*\"",
    "lint:fix": "eslint --ignore-path .eslintignore \"./src/**/*.ts*\" --fix",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "storycap": "storycap --serverCmd \"start-storybook -p 6006\" http://localhost:6006 --serverTimeout 600000",
    "reg-suit": "reg-suit run",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  }
}
