{
  "name": "@shisetsu-viewer/viewer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@apollo/client": "4.0.7",
    "@auth0/auth0-spa-js": "2.5.0",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@mui/icons-material": "7.3.4",
    "@mui/material": "7.3.4",
    "@mui/x-date-pickers": "8.14.0",
    "graphql": "16.11.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "7.9.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "6.0.0",
    "@graphql-codegen/client-preset": "5.0.1",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-docs": "9.1.7",
    "@storybook/react-vite": "9.1.7",
    "@swc/core": "1.13.5",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "@vitejs/plugin-react-swc": "4.1.0",
    "@vitest/browser": "3.2.4",
    "esbuild": "0.25.10",
    "msw": "2.11.3",
    "rollup-plugin-visualizer": "6.0.3",
    "storybook": "9.1.7",
    "vite": "7.1.7",
    "vitest": "3.2.4",
    "web-vitals": "5.1.0"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.25.10"
  },
  "scripts": {
    "generate": "graphql-codegen --require dotenv/config --config codegen.ts",
    "start": "vite --port 3000",
    "build": "tsc && vite build",
    "build:analyze": "vite build --mode analyze",
    "serve": "vite preview --port 3000",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typecheck": "tsgo",
    "test": "TZ=Asia/Tokyo vitest",
    "test:ci": "TZ=Asia/Tokyo vitest --run",
    "test:unit": "TZ=Asia/Tokyo vitest --run --reporter=verbose",
    "test:integration": "TZ=Asia/Tokyo vitest --run test/integration",
    "test:accessibility": "TZ=Asia/Tokyo vitest --run test/accessibility",
    "test:performance": "TZ=Asia/Tokyo vitest --run test/performance",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:ci && npm run test:e2e",
    "coverage": "TZ=Asia/Tokyo vitest run --coverage",
    "coverage:open": "TZ=Asia/Tokyo vitest run --coverage && open coverage/index.html"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
